{
  "manifest_version": 3,
  "name": "Page Cleaner",
  "version": "1.0",
  "description": "Temporarily hide annoying elements on any webpage.",

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    }
  },

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
}